---
import Button from '../../common/Button.astro';
import GrayCardWithImg from '../../common/GrayCardWithImg.astro';
---

<div class="news-block">
  <div class="news-block__header">
    <h3>Новости</h3>
    <Button text="Все новости" option="btn-primary" />
  </div>

  <div class="news-block__cards">
