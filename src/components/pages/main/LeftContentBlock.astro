---
import cardWithArrowBg1 from '@assets/pages/main/card-with-arrow-bg-1.png';

import Banner from '@components/pages/main/leftContentBlock/Banner.astro';
import EmployeeBirthdaysBlock from '@components/pages/main/leftContentBlock/EmployeeBirthdaysBlock.astro';
import Carousel from '@components/pages/main/leftContentBlock/Carousel.astro';
import CardWithArrow from '@components/pages/main/leftContentBlock/CardWithArrow.astro';
import NewsBlock from '@components/pages/main/leftContentBlock/NewsBlock.astro';
import GrayCards from '@components/pages/main/leftContentBlock/GrayCards.astro';
import DifferentCards from '@components/pages/main/leftContentBlock/DifferentCards.astro';
---

<div class="left-content-block">
  <div class="row justify-content-between">
    <div class="col-md-7 col-xl-8">
      <Carousel />
    </div>

    <div class="col-md-5 col-xl-4">
      <CardWithArrow
        tag="Новый раздел"
        text="Идея 2.0"
        img={cardWithArrowBg1.src}
      />
    </div>
  </div>

  <EmployeeBirthdaysBlock />
  <NewsBlock />
  <Banner />
  <GrayCards />
  <DifferentCards />
</div>

<style lang="scss">
  .left-content-block {
    background-color: #ffffff;
    padding: 25px;
    border-radius: 25px;
  }
</style>
