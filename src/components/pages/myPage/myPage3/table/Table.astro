---
import TableCard from '@components/pages/myPage/myPage3/table/TableCard.astro';
---

<div class="employees-table table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th>ФИО / дата рождения</th>
        <th>Должность</th>
        <th>Подразделение</th>
        <th>{'Дата приема\nДата прохождения ИС'}</th>
        <th>Достижения</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <TableCard />
      <TableCard />
    </tbody>
  </table>
</div>

<style lang="scss">
  .employees-table {
    thead th {
      border: none;
      color: #b3b3b3;
      font-size: 12px;
      font-weight: 900;
      white-space: pre-line;
      background-color: #f3f5fb;
    }

    tbody::before {
      content: '-';
      display: block;
      line-height: 1em;
      color: transparent;
    }
  }
</style>
