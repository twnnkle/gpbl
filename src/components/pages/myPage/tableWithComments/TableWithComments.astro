---
import TableWithCommentsCard from '@components/pages/myPage/tableWithComments/TableWithCommentsCard.astro';
---

<div class="employees-table table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th>№</th>
        <th>Задача</th>
        <th>Критерии выполнения</th>
        <th>{'Срок исполнения\nплан/факт'}</th>
        <th>Комментарии</th>
        <th>Оценка цели</th>
        <th>Выкл/вкл задача</th>
      </tr>
    </thead>

    <tbody>
      <TableWithCommentsCard id="1"/>
      <TableWithCommentsCard id="2" withAvatars/>
    </tbody>
  </table>
</div>

<style lang="scss">
  .employees-table {
    thead th {
      border: none;
      color: #b3b3b3;
      font-size: 12px;
      font-weight: 900;
      white-space: pre-line;
      background-color: #f3f5fb;
    }

    tbody::before {
      content: '-';
      display: block;
      line-height: 1em;
      color: transparent;
    }
  }
</style>
