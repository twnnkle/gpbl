---
import './_index.scss';

interface Props {
  id: string;
  name: string;
  value: string;
}

const { id, value, name } = Astro.props;
---

<div class="radio-container">
  <input
    type="radio"
    id={id}
    name={name}
    value={value}
    checked={value === 'true'}
  />
  <label for={id}>
    <slot />
  </label>
</div>
