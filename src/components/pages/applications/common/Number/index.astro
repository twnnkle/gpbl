<div class="number-input">
  <button class="minus">
    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M5.25 8.25H12.75V9.75H5.25V8.25Z" fill="#212529"/>
    </svg>
  </button>
  <input min="0" name="quantity" value="1" type="number">
  <button class="plus">
    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M8.25 8.25V3.75H9.75V8.25H14.25V9.75H9.75V14.25H8.25V9.75H3.75V8.25H8.25Z" fill="#212529"/>
    </svg>
  </button>
</div>
