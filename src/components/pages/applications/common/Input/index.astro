---
import './_index.scss';

interface Props {
  type?: string;
  placeholder?: string;
  disabled?: boolean;
}

const { placeholder, disabled = false, type = 'text' } = Astro.props;
---

<input
  class="input-text"
  type="text"
  placeholder={placeholder}
  disabled={disabled}
  class:list={{ 'input-date': type === 'date' }}
/>
