---
const { img, subdivision, title, description, date } = Astro.props;
---

<div class="grayCardWithImg">
  <img src={img} alt="Картинка карточки" />

  <div class="grayCardWithImg__text">
    <span class="grayCardWithImg__subdivision">{subdivision}</span>
    <h4 class="grayCardWithImg__title">{title}</h4>
    <p class="grayCardWithImg__description">{description}</p>
    <span class="grayCardWithImg__date">{date}</span>
  </div>
</div>

<style lang="scss">
  .grayCardWithImg {
    background-color: #f3f5fb;
    display: flex;
    flex-direction: column;
    gap: 10px;
    border-radius: 24px;
    width: fit-content;

    img {
      width: 100%;
      height: auto;
      border-radius: 24px;
    }

    &__text {
      display: flex;
      flex-direction: column;
      gap: 10px;
      padding: 15px;
    }

    &__subdivision,
    &__date {
      color: #A6B1D2;
      font-size: 16px;
      font-weight: 500;
    }

    &__title {
      color: #212529;
      font-size: 20px;
      font-weight: 500;
    }

    &__description {
      color: #212529;
      font-size: 16px;
      font-weight: 400;
    }
  }
</style>
