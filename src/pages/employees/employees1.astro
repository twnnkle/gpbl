<style lang="scss">
  .employees-page {
    margin-top: 50px;

    .employees-header {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      gap: 10px;

      &__search {
        margin-top: 20px;
        position: relative;
        width: fit-content;

        input {
          height: 38px;
          width: 650px;
          border: none;
          outline: none;
          background-color: #f3f5fb;
          border-bottom-left-radius: 4px;
          border-top-left-radius: 4px;
          padding: 0 12px;

          @media (max-width: 1250px) {
            width: 500px;
          }

          &::placeholder {
            color: #ccd3e7;
            font-size: 16px;
            font-weight: 400;
          }
        }

        button {
          position: absolute;
          right: -104px;
          top: 0;
          border: none;
          height: 38px;
          background-color: #487cfb;
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 8px;
          padding: 0 12px;
          color: #ffffff;
          font-size: 16px;
          font-weight: 400;
          border-bottom-right-radius: 4px;
          border-top-right-radius: 4px;
        }
      }

      &__star {
        background-color: #cfe2ff;
        height: 38px;
        width: 38px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
      }
    }

    .employees-content-block {
      margin-top: 40px;

      &__title {
        color: #000000;
        font-weight: 500;
        font-size: 28px;
      }

      &__cards {
        margin-top: 30px;
      }
    }
  }
</style>
