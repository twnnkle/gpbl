---
import './index.scss';

import Container from '@layouts/Container/index.astro';

import SideMenu from '@components/pages/employees/employees1/SideMenu/index.astro';
import NavMenu from '@components/pages/employees/employees1/NavMenu/index.astro';
import Search from '@components/common/SearchWithBlueBtn/index.astro';
import Star from '@components/common/Star/index.astro';
import EmployeesContentBlock1 from '@components/pages/employees/employees1/employeesContentBlocks/EmployeesContentBlock1/index.astro';
import EmployeesContentBlock2 from '@components/pages/employees/employees1/employeesContentBlocks/EmployeesContentBlock2/index.astro';
import EmployeesContentBlock3 from '@components/pages/employees/employees1/employeesContentBlocks/EmployeesContentBlock3/index.astro';
---

<body>
  <Container>
    <main>
      <div class="employees-page">
        <div class="row justify-content-between">
          <div class="col-md-3">
            <SideMenu />
          </div>

          <div class="col-md-9">
            <div class="employees-header">
              <div class="employees-header__search-and-nav">
                <NavMenu />
                <Search />
              </div>

              <Star />
            </div>

            <EmployeesContentBlock1 />
            <EmployeesContentBlock2 />
            <EmployeesContentBlock3 />
          </div>
        </div>
      </div>
    </main>
  </Container>
</body>
