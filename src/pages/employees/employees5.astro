---
import { Image } from 'astro:assets';

import Container from '@layouts/Container.astro';

import SideMenu from '@components/pages/employees/employees5/SideMenu.astro';
import Breadcrumbs from '@components/pages/employees/employees5/Breadcrumbs.astro';
import Star from '@components/common/Star.astro';

import bigAvatar from '@assets/about-big-avatar.png';
import avatar from '@assets/pages/employees/avatar.png';
---

<body>
  <Container>
    <main>
      <div class="employees-page">
        <div class="row justify-content-between">
          <div class="col-md-3">
            <SideMenu />
          </div>

          <div class="col-md-9">
            <div class="employee-info-header">
              <Breadcrumbs />
              <Star />
            </div>

            <div class="employee-info">
              <div class="row justify-content-between">
                <div class="col-md-4 col-xl-3">
                  <div class="employee-info-avatar">
                    <Image
                      src={bigAvatar}
                      width="190"
                      height="190"
                      alt="Аватар"
                    />

                    <div class="employee-info-avatar__status">
                      <svg
                        width="10"
                        height="10"
                        viewBox="0 0 15 15"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M7.4375 14.4688C9.3023 14.4688 11.0907 13.728 12.4093 12.4093C13.728 11.0907 14.4688 9.3023 14.4688 7.4375C14.4688 5.5727 13.728 3.78427 12.4093 2.46566C11.0907 1.14704 9.3023 0.40625 7.4375 0.40625C5.5727 0.40625 3.78427 1.14704 2.46566 2.46566C1.14704 3.78427 0.40625 5.5727 0.40625 7.4375C0.40625 9.3023 1.14704 11.0907 2.46566 12.4093C3.78427 13.728 5.5727 14.4688 7.4375 14.4688Z"
                          fill="#198754"></path>
                      </svg>

                      <span>В офисе</span>
                    </div>
                  </div>
                </div>

                <div class="col-md-8 col-xl-5">
                  <div class="employee-info-about">
                    <h4 class="employee-info-about__name">
                      Иванов Иван Иванович
                    </h4>
                    <p class="employee-info-about__positions">
                      Дизайнер продукта・ Административно хозяйственный отдел
                    </p>

                    <p class="employee-info-about__about-label">О себе</p>
                    <p class="employee-info-about__about-description">
                      Люблю дизайн и все, что с ним связано. Пишу в «Про дизайн»
                      посты со своими коллегами и рисую этот внутренний сервис
                    </p>

                    <div class="employee-info-about__about-items">
                      <div class="employee-info-about__about-item">
                        <span>Подразделение</span>
                        <p>Проектирование UX</p>
                      </div>

                      <div class="employee-info-about__about-item">
                        <span>Мобильный телефон</span>
                        <a href="tel:78005553535"
                          >+7 800 555-35-35

                          <svg
                            width="20"
                            height="20"
                            viewBox="0 0 20 20"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <g opacity="0.6">
                              <path
                                d="M2.5 13.964V17.4995H6.03558L14.5119 9.02318L10.9764 5.48763L2.5 13.964ZM16.9804 4.15171L15.8478 3.01913C15.5292 2.70048 15.097 2.52148 14.6463 2.52148C14.1957 2.52148 13.7636 2.70048 13.4449 3.01913L12.1548 4.30921L15.6903 7.84479L16.9804 6.55463C17.2991 6.23597 17.4781 5.80379 17.4781 5.35317C17.4781 4.90253 17.2991 4.47036 16.9804 4.15171Z"
                                fill="#212529"></path>
                            </g>
                          </svg>
                        </a>
                      </div>

                      <div class="employee-info-about__about-item">
                        <span>Достижения</span>
                        <p>10</p>
                      </div>

                      <div class="employee-info-about__about-item">
                        <span>Почта</span>
                        <a href="mailto:Ivan.Ivanenko@gpbl.ru"
                          >Ivan.Ivanenko@gpbl.ru

                          <svg
                            width="20"
                            height="20"
                            viewBox="0 0 20 20"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <g opacity="0.6">
                              <path
                                fill-rule="evenodd"
                                clip-rule="evenodd"
                                d="M4.99967 5.83333H3.33301V17.5H13.333V15.8333H4.99967V5.83333ZM6.66634 2.5V14.1667H16.6663V2.5H6.66634Z"
                                fill="#212529"></path>
                            </g>
                          </svg>
                        </a>
                      </div>

                      <div class="employee-info-about__about-item">
                        <span>Внутренний телефон</span>
                        <p>34-54-21</p>
                      </div>

                      <div class="employee-info-about__about-item">
                        <span>День рождения</span>
                        <p>10 октября</p>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-md-12 col-xl-4">
                  <div class="employee-info-supervisor">
                    <h4>Руководитель</h4>

                    <a href="#" class="employee-info-supervisor-card">
                      <div class="employee-info-supervisor-card__avatar">
                        <Image
                          src={avatar}
                          width="32"
                          height="32"
                          alt="Аватар"
                        />
                      </div>

                      <div class="employee-info-supervisor-card__text">
                        <p>Константин Константинопальский</p>
                        <span>Генеральный директор</span>
                      </div>

                      <div class="employee-info-supervisor-card__button">
                        <svg
                          width="17"
                          height="16"
                          viewBox="0 0 17 16"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            fill-rule="evenodd"
                            clip-rule="evenodd"
                            d="M5.14592 1.64604C5.19236 1.59948 5.24754 1.56253 5.30828 1.53733C5.36903 1.51212 5.43415 1.49915 5.49992 1.49915C5.56568 1.49915 5.63081 1.51212 5.69155 1.53733C5.7523 1.56253 5.80747 1.59948 5.85392 1.64604L11.8539 7.64604C11.9005 7.69248 11.9374 7.74766 11.9626 7.80841C11.9878 7.86915 12.0008 7.93427 12.0008 8.00004C12.0008 8.06581 11.9878 8.13093 11.9626 8.19167C11.9374 8.25242 11.9005 8.30759 11.8539 8.35404L5.85392 14.354C5.76003 14.4479 5.63269 14.5007 5.49992 14.5007C5.36714 14.5007 5.2398 14.4479 5.14592 14.354C5.05203 14.2602 4.99929 14.1328 4.99929 14C4.99929 13.8673 5.05203 13.7399 5.14592 13.646L10.7929 8.00004L5.14592 2.35404C5.09935 2.30759 5.06241 2.25242 5.0372 2.19167C5.012 2.13093 4.99902 2.06581 4.99902 2.00004C4.99902 1.93427 5.012 1.86915 5.0372 1.80841C5.06241 1.74766 5.09935 1.69249 5.14592 1.64604Z"
                            fill="#141619"></path>
                        </svg>
                      </div>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </Container>
</body>

<style lang="scss">
  body {
    background-color: #f3f5fb;
  }

  .employees-page {
    margin-top: 50px;
  }

  .employee-info-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .employee-info {
    margin-top: 40px;
  }

  .employee-info-avatar {
    position: relative;
    height: fit-content;
    width: fit-content;

    img {
      border-radius: 50%;
    }

    &__status {
      position: absolute;
      bottom: -15px;
      left: 50%;
      transform: translateX(-50%);
      background-color: #ffffff;
      border-radius: 46px;
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 6px 12px;

      span {
        color: #212529;
        font-size: 16px;
        font-weight: 400;
        white-space: nowrap;
      }
    }
  }

  .employee-info-about {
    p,
    h4,
    a {
      color: #212529;
      line-height: 100%;
    }

    &__name {
      font-size: 32px;
      font-weight: 500;
    }

    &__positions {
      font-size: 15px;
      font-weight: 400;
      margin-top: 10px;
    }

    &__about-label {
      font-size: 16px;
      font-weight: 700;
      margin-top: 30px;
    }

    &__about-description {
      font-size: 14px;
      font-weight: 500;
      margin-top: 12px;
    }

    &__about-items {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      margin-top: 30px;
      gap: 15px;
    }

    &__about-item {
      width: 40%;

      span {
        color: #636464;
        font-size: 12px;
        font-weight: 700;
        display: block;
      }

      p,
      a {
        font-size: 14px;
        font-weight: 500;
        margin-top: 8px;
        width: fit-content;
        white-space: nowrap;
      }

      a {
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 5px;
      }
    }
  }

  .employee-info-supervisor {
    @media (max-width: 1199px) {
      margin-top: 20px;
    }

    h4 {
      color: #212529;
      font-size: 20px;
      font-weight: 500;
      line-height: 100%;
    }
  }

  .employee-info-supervisor-card {
    display: flex;
    margin-top: 10px;
    text-decoration: none;
    width: fit-content;

    img {
      border-radius: 50%;
    }

    &__text {
      margin-left: 10px;

      p {
        color: #212529;
        font-size: 14px;
        font-weight: 500;
        line-height: 100%;
      }

      span {
        color: #7f8ebe;
        font-size: 14px;
        font-weight: 400;
        line-height: 100%;
      }
    }

    &__button {
      margin-left: 20px;
    }
  }
</style>
