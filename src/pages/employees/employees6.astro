---
import Container from '@layouts/Container.astro';

import SideMenu from '@components/pages/employees6/SideMenu.astro';
import PDFCard from '@components/pages/employees6/PDFCard.astro'
---

<body>
  <Container>
    <main>
      <div class="employees-page">
        <div class="row justify-content-between">
          <div class="col-md-3">
            <SideMenu />
          </div>

          <div class="col-md-9">
            <div class="employee-pdf-header">
              <h3>PDF структура</h3>

              <span class="employee-pdf-header__star">
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 16 16"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <g clip-path="url(#clip0_299_2420)">
                    <path
                      d="M3.612 15.443C3.226 15.641 2.788 15.294 2.866 14.851L3.696 10.121L0.172996 6.76501C-0.156004 6.45101 0.0149962 5.87701 0.455996 5.81501L5.354 5.11901L7.538 0.792012C7.735 0.402012 8.268 0.402012 8.465 0.792012L10.649 5.11901L15.547 5.81501C15.988 5.87701 16.159 6.45101 15.829 6.76501L12.307 10.121L13.137 14.851C13.215 15.294 12.777 15.641 12.391 15.443L8 13.187L3.611 15.443H3.612Z"
                      fill="#487CFB"></path>
                  </g>
                  <defs>
                    <clipPath id="clip0_299_2420">
                      <rect width="16" height="16" fill="white"></rect>
                    </clipPath>
                  </defs>
                </svg>
              </span>
            </div>

            <div class="employee-pdf-content row justify-content-between gy-4">
              <div class="col-md-6">
                <PDFCard />
              </div>

              <div class="col-md-6">
                <PDFCard />
              </div>

              <div class="col-md-6">
                <PDFCard />
              </div>

              <div class="col-md-6">
                <PDFCard />
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </Container>

  <style lang="scss">
    body {
      background-color: #f3f5fb;
    }

    .employees-page {
      margin-top: 50px;
    }

    .employee-pdf-header {
      display: flex;
      align-items: center;
      justify-content: space-between;

      h3 {
        color: #212529;
        font-weight: 500;
        font-size: 28px;
      }

      &__star {
        background-color: #cfe2ff;
        height: 38px;
        width: 38px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
      }
    }

    .employee-pdf-content {
      margin-top: 30px;
    }
  </style>
</body>
