              <h2>Интервью сотрудников</h2>
              <DatepickerDropdown />
            </div>
          </div>
        </section>

        <section class="media-employee-interviews-projects">
          <div class="row">
            <div class="col-12">
              <div class="media-employee-interviews-projects__list">
                {
                  projects.map((item) => (
                    <EventCard
                      imageLink={item.imageLink}
                      title={item.title}
                      link={item.link}
                      period={item.period}
                      categories={item.categories}
                      background="transparent"
                    />
                  ))
                }
              </div>
            </div>
          </div>
        </section>
      </div>

      <script>
        // Импортируем библиотеку выбора даты и её стили
        import AirDatepicker from 'air-datepicker';
        import 'air-datepicker/air-datepicker.css';

        // После загрузки DOM инициализируем выбор даты
        document.addEventListener('DOMContentLoaded', () => {
          new AirDatepicker('#datepicker', {
            range: true,
            multipleDates: true,
            multipleDatesSeparator: ' - ',
          });
        });
      </script>
    </main>
  </Container>
</body>
