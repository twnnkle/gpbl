<body>
  <Container>
    <main>
      <div class="main-page">
        <section class="media-calendar-breadcrumbs">
          <div class="row g-0">
            <div class="col-12">
              <Breadcrumbs />
            </div>
          </div>
        </section>

        <section class="media-calendar-header">
          <div class="row g-0">
            <div class="col-12">
              <h2>Календарь мероприятий</h2>
            </div>
          </div>
        </section>

        <section class="media-calendar-search">
          <div class="row g-0">
